<%- include('../../partials/header.ejs') %>

<div class="main-panel">
  <div class="content-wrapper pb-0">
    <div class="page-header flex-wrap mb-4">
      <h3 class="mb-0"><%= recipe.name %></h3>
      <div class="d-flex">
        <a href="/" class="btn btn-sm btn-outline-secondary ms-3">
          <i class="mdi mdi-arrow-left"></i> Back to Recipes
        </a>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8 grid-margin stretch-card">
        <div class="card shadow-sm">
          
          <!-- Recipe Image -->
          <% if (recipe.image) { %>
            <img src="<%= recipe.image %>" alt="<%= recipe.name %>" class="card-img-top" style="height: 350px; object-fit: cover;">
          <% } else { %>
            <img src="/images/placeholder-food.jpg" alt="No image" class="card-img-top" style="height: 350px; object-fit: cover;">
          <% } %>

          <div class="card-body">
            <!-- Basic Info -->
            <h4 class="card-title"><%= recipe.name %></h4>
            <% if (recipe.cuisine) { %>
              <span class="badge bg-primary text-white mb-2"><%= recipe.cuisine %></span>
            <% } %>
            <p class="text-muted mb-3"><i class="mdi mdi-clock-outline"></i> <%= recipe.time %> mins</p>
            <p class="lead"><%= recipe.description %></p>

            <!-- Ingredients -->
            <hr>
            <h5 class="mb-3">Ingredients</h5>
            <ul class="list-group mb-4">
              <% recipe.ingredients.forEach(ing => { %>
                <li class="list-group-item"><i class="mdi mdi-circle-small text-success"></i> <%= ing %></li>
              <% }) %>
            </ul>

            <!-- Instructions -->
            <h5 class="mb-3">Instructions</h5>
            <p style="white-space: pre-line;"><%= recipe.instructions %></p>
          </div>

          <div class="card-footer bg-light d-flex justify-content-between align-items-center">
            <small class="text-muted">By 
              <%= recipe.author ? (recipe.author.username || recipe.author.name || 'Unknown') : 'Unknown' %>
            </small>
            <div>
              <a href="/recipe/edit/<%= recipe._id %>" class="btn btn-outline-primary btn-sm me-2">
                <i class="mdi mdi-pencil"></i> Edit
              </a>
              <form action="/recipe/delete/<%= recipe._id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-outline-danger btn-sm">
                  <i class="mdi mdi-delete"></i> Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- Optional Sidebar -->
      <div class="col-lg-4 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h5>Quick Info</h5>
            <p><strong>Time:</strong> <%= recipe.time %> minutes</p>
            <% if (recipe.cuisine) { %>
              <p><strong>Cuisine:</strong> <%= recipe.cuisine %></p>
            <% } %>
            <p><strong>Author:</strong> <%= recipe.author ? (recipe.author.username || recipe.author.name || 'Unknown') : 'Unknown' %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer.ejs') %>

<style>
  .card img {
    border-bottom: 1px solid #eee;
  }
  ul.list-group li {
    font-size: 15px;
  }
  .lead {
    font-size: 16px;
    color: #555;
  }
</style>
